@import "/miniprogram_npm/@vant/weapp/common/index.wxss"; /* 引入 vant 样式 */

.container {
  padding: 5px;
}

.center-box {
	min-height: 700px;
  background-color: #ffffff;
  padding: 5px;
  border-radius: 20rpx;
  -webkit-filter: drop-shadow(0 0 8rpx #44ADFB);
  filter: drop-shadow(0 0 8rpx #44ADFB);
}

.nav {
  display: flex;
  text-align: center;
  font-size: 30rpx;
  margin-bottom: 1%;
}

.left, .right {
  flex: 1;
	display: flex;
  flex-direction: column;
  align-items: center;
	justify-content: center;
	
	transition: background-color 0.3s;
}

.options {
  display: flex;
  flex-wrap: wrap; /* 允许子元素换行 */
}

.option-container {
  display: flex;
  flex-direction: column; /* 纵向排列子元素 */
  align-items: center; /* 垂直居中 */
  margin: 7px; /* 调整容器之间的间距 */
}

.option-button {
  display: flex; /* 使用 flexbox 布局 */
  align-items: center; /* 垂直居中 */
  justify-content: center; /* 水平居中 */
  width: 60px; /* 固定按钮宽度 */
  height: 60px; /* 固定按钮高度 */
  background-color: #d1cfcf;
  font-size: 10px;
  border: 1px solid #ffffff;
  border-radius: 50%; /* 将按钮设计成圆形 */
  box-sizing: border-box; /* 包括 padding 和 border 在内进行宽度计算 */
  text-align: center; /* 水平居中 */
  transition: background-color 0.3s; /* 动画效果 */
}

.option-button.active {
  background-color: #186ac2; /* 按钮激活后的背景颜色 */
}

.icon {
  width: 30px; /* 设置图标的宽度 */
  height: 30px; /* 设置图标的高度 */
  background-size: cover;
	transition: filter 0.3s; /* 动画效果 */
	
}
.income-icon{
	width: 30px; /* 设置图标的宽度 */
  height: 30px; /* 设置图标的高度 */
  background-size: cover;
	transition: filter 0.3s; /* 动画效果 */
	margin-top: 5px; /* 图标和文本之间的间距 */
  font-size: 12px;
  font-family: cursive;
}
.expenses-icon{
	width: 30px; /* 设置图标的宽度 */
  height: 30px; /* 设置图标的高度 */
  background-size: cover;
	transition: filter 0.3s; /* 动画效果 */
	margin-top: 5px; /* 图标和文本之间的间距 */
  font-size: 12px;
  font-family: cursive;
}

.option-button.active .icon {
  filter: brightness(0) invert(1); /* 图标激活后的颜色效果 */
}

.option-text {
  margin-top: 5px; /* 图标和文本之间的间距 */
  font-size: 12px;
  font-family: cursive;
}
.NavigationBar-text{
	margin-top: 5px; /* 图标和文本之间的间距 */
  font-size: 14px;
  font-family: cursive;
}

.input-container {
  display: flex;
  align-items: center;
}
