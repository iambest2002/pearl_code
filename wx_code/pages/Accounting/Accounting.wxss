.confirm{
	width: 86px;
  height: 40px;
  color: #ffffff;
  font-size: 14px;
  border-radius: 4px;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}
.input-box {
  width: 97%;
  height: 40px;
  border:   #ffffff;
  border-radius: 4px;
  text-align: center;
	line-height: 40px;
  font-size: 16px;
}
.field-container{
	width: 100%;
  height: 40px;
  border: 1px solid #ffffff;
  border-radius: 4px;
  text-align: center;
	font-size: 16px;
	background-color:darkgray;

}

.keyboard-body {
  height: 210px;
  display: grid;
  grid-template-columns: repeat(4, 1fr); /* 四列布局 */
  gap: 0; /* 按键之间的间距 */
}

.key {
  width: 100%;
  height: 50px;
  font-size: 18px;
  background-color: #ffffff;
  border: none; /* 去除边框 */
  text-align: center;
  line-height: 50px;
}

.delete-key {
  background-color: #ffffff;
  color: #fff;
  position: relative; /* 确保图标在按钮中心 */
  display: flex;
  justify-content: center;
  align-items: center;
}
.clear-key {
  background-color: #ffffff;
  color: #fff;
  position: relative; /* 确保图标在按钮中心 */
  display: flex;
  justify-content: center;
  align-items: center;
}

.delete-icon {
  width: 24px; /* 设置图标的宽度 */
  height: 24px; /* 设置图标的高度 */
}
.clear-icon {
  width: 24px; /* 设置图标的宽度 */
  height: 24px; /* 设置图标的高度 */
}

.date-key {
  color: #000000; /* 你想要的字体颜色 */
	font-size: 12px; /* 根据需要调整字体大小 */
	width: 100%;
  height: 50px;
  /* background-color: #ffffff; */
  border: none; /* 去除边框 */
  text-align: center;
  line-height: 50px;
}

.date-popup {
  display: flex;
  flex-direction: column;
  align-items: center;
}
