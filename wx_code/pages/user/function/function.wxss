.function-container {
  background: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx 30rpx;
}

.function-group {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 40rpx;
  box-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.05);
}

.menu-button {
  position: relative;
  width: 100% !important;
  height: 88rpx !important;
  padding: 0 30rpx !important;
  margin: 0 !important;
  border: none !important;
  background: #fff !important;
  font-size: 34rpx;
  color: #333;
  text-align: left;
  display: flex;
  align-items: center;
  border-radius: 0 !important;
  line-height: 88rpx !important;
}

.menu-button::after {
  display: none;
}

.menu-button:active {
  background-color: #f5f5f5 !important;
}

.menu-button + .menu-button {
  border-top: 0.5px solid rgba(0, 0, 0, 0.1);
}

/* 右箭头图标 */
.arrow {
  position: absolute;
  right: 30rpx;
  color: #c7c7cc;
  font-family: system-ui;
}

/* 左侧图标 */
.menu-icon {
  display: none;
}

.function-buttons {
  display: none;
}