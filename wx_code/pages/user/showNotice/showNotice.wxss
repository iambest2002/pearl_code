.notice-bar {
  padding: 20px;
  background-color: #fff;
  box-shadow: 0 -2px 8px rgba(0, 0, 0, 0.2);
}
.notice-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 10px;
}
.notice-content {
  font-size: 14px;
  color: #333;
  margin-bottom: 20px;
}
.notice-actions button {
  margin: 0 5px;
  padding: 5px 10px;
  font-size: 14px;
}
