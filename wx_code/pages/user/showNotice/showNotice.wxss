.notice-bar {
  padding: 40rpx 30rpx;
  background-color: #fff;
  border-radius: 20rpx;
}

.notice-title {
  text-align: center; 
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
}

.notice-content {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
  line-height: 1.6;
  padding: 0 10rpx;
}

.notice-actions {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
  padding: 0 20rpx;
}

.notice-btn {
  flex: 1;
  margin: 0;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  border-radius: 40rpx;
  background: #f5f5f5;
  color: #666;
  border: none;
}

.notice-btn.confirm {
  background: #6ed6da;
  color: #fff;
}

.notice-btn::after {
  border: none;
}

/* 按钮点击效果 */
.notice-btn:active {
  opacity: 0.8;
}

/* 弹窗动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: scale(0.8);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.van-popup {
  animation: fadeIn 0.3s ease-out;
}
