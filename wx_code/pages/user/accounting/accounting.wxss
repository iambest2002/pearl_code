.schedule-accounting {
  margin: 20px;
  padding: 10px;
  background-color: #f7f7f7;
  border-radius: 10px;
}

.schedule-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 10px;
}

.picker {
  margin-bottom: 10px;
  padding: 10px;
  background-color: #ffffff;
  border: 1px solid #e0e0e0;
  border-radius: 5px;
}

.schedule-button {
  width: 100%;
  padding: 10px;
  background-color: #0cb4e7;
  color: white;
  border: none;
  border-radius: 5px;
}


.cancellation{
  width: 62px;
  height: 40px;
  border: none;
  background: none !important;
  font-size: 14px;
  border-radius: 0; /* 移除按钮的边角圆角 */
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}
.input-container {
  width: 100%; /* 占满整个弹出层的宽度 */
  display: flex;
  justify-content: space-between; /* 取消按钮和确认按钮分别靠左和靠右 */
  background-color: #f7f7f7;
  margin: 0;  /* 确保没有外边距 */
}
.confirm{
  width: 62px;
  height: 40px;
  color: #ffffff;
  font-size: 14px;
  border-radius: 0; /* 移除按钮的边角圆角 */
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

.keyboard-body {
  height: 80px;
  display: grid;

}


.delete-key {
background-color: #ffffff;
color: #fff;
position: relative; /* 确保图标在按钮中心 */
display: flex;
justify-content: center;
align-items: center;
}
.clear-key {
background-color: #ffffff;
color: #fff;
position: relative; /* 确保图标在按钮中心 */
display: flex;
justify-content: center;
align-items: center;
}

.delete-icon {
width: 24px; /* 设置图标的宽度 */
height: 24px; /* 设置图标的高度 */
}
.clear-icon {
width: 24px; /* 设置图标的宽度 */
height: 24px; /* 设置图标的高度 */
}

.date-key {
color: #000000; /* 你想要的字体颜色 */
font-size: 12px; /* 根据需要调整字体大小 */
width: 100%;
height: 50px;
/* background-color: #ffffff; */
border: none; /* 去除边框 */
text-align: center;
line-height: 50px;
}

.date-popup {
display: flex;
flex-direction: column;
align-items: center;
}
/* 自定义样式 */
.schedule-list .delete-button {
background-color: #f44336; /* 红色背景 */
color: white; /* 白色字体 */
padding: 16px;
text-align: center;
font-size: 14px;
line-height: 24px;
border-radius: 0 4px 4px 0; /* 右边圆角 */
}

.schedule-list .delete-button:hover {
background-color: #d32f2f; /* 深红色背景 */
}

