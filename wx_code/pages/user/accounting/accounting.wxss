.schedule-accounting {
    margin: 20px;
    padding: 10px;
    background-color: #f7f7f7;
    border-radius: 10px;
  }
  
  .schedule-title {
    font-size: 18px;
    font-weight: bold;
    margin-bottom: 10px;
  }
  
  .picker {
    margin-bottom: 10px;
    padding: 10px;
    background-color: #ffffff;
    border: 1px solid #e0e0e0;
    border-radius: 5px;
  }
  
  .schedule-button {
    width: 100%;
    padding: 10px;
    background-color: #007aff;
    color: white;
    border: none;
    border-radius: 5px;
  }
  