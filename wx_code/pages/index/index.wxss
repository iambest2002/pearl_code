/* 搜索 */


/* 针对 van-search 的外部容器样式 */
.van-search {
  background-color: #fff;
  border: 1rpx solid #e6e6e6;
  border-radius: 50rpx; /* 可根据需要调整 */
  padding: 0 20rpx;
}

/* 针对 van-search 输入框和按钮的额外样式 */
.van-search__input {
  padding: 20rpx 0;  /* 调整内边距 */
  background-color: #fff;
}

/* 自定义搜索按钮样式 */
.van-search__action {
  color: #00CCCC;
}

.word-wrap {
  background-color: #fff;
  border-radius: 50rpx;
  margin: 30rpx 20rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1); /* 添加阴影 */
}

.word-line {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.word {
  margin-left: 10rpx;
  font-weight: 550;
  font-size: 60rpx; /* 调整字体大小 */
  margin-bottom: 20rpx;
}
.search-bar {
  flex: 1;
  background-color: #96e3fa;
}
.search-icon {
  width: 20px; /* 设置图标的宽度 */
  height: 20px; /* 设置图标的高度 */
  flex: 1;
  background-size: cover;
	transition: filter 0.3s; /* 动画效果 */
	display: flex;
}

.button-icon {
  width: 40rpx; /* 设置图标的宽度 */
  height: 40rpx; /* 设置图标的高度 */
  flex: 0 0 40rpx; /* 确保图标不被压缩 */
  background-size: cover;
  transition: filter 0.3s; /* 动画效果 */
  display: flex;
}

.add-book {
  background-color: #00CCCC;
  padding: 15rpx 30rpx; /* 增加内边距 */
  border-radius: 20rpx;
  color: #fff;
  text-align: center; /* 文字居中 */
}

.tag-wrap {
  display: flex;
  flex-direction: row;
  margin: 20rpx 0;
  flex-wrap: wrap;
}

.tag {
  margin-right: 20rpx;
  background-color: rgb(198, 198, 255);
  padding: 0rpx 20rpx;
  border-radius: 20rpx;
  color: #fff;
  margin-bottom: 20rpx;
}

.word-title {
  font-weight: 550;
  font-size: 40rpx;
  margin-bottom: 20rpx;
}

.popup-content {
  padding: 40rpx; /* 增加内边距 */
  background-color: #fff;
  border-radius: 20rpx; /* 添加圆角 */
}

/* 容器样式 */
.container {
  padding: 20rpx;
}
.word-box {
  display: flex;
  flex-direction: column;
  padding: 5px;
  margin-bottom: 5px;
  background-color: #f5f5f5;
  border-radius: 5px;
  box-shadow: 0px 2px 8px rgba(0, 0, 0, 0.1);
}

.word {
  font-size: 18px;
  font-weight: bold;
  color: #333;
  margin-bottom: 5px; /* 给单词和翻译之间增加一些间距 */
}

.translation {
  font-size: 16px;
  color: #666;
  margin-top: 5px;
}
.scroll-container {
  height: 100vh;
  overflow-y: scroll;
}
/* 样式文件 */
.scroll-buttons-container {
  position: fixed;
  right: 20px;
  bottom: 20px;
  display: flex;
  flex-direction: column; /* 垂直排列 */
  align-items: center;
  gap: 10px; /* 按钮之间的间距 */
}

.scroll-button,
.scroll-button-up {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  background-color: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
}

.icon {
  width: 24px;
  height: 24px;
}


.center-box {
	min-height: 900px;
  background-color: #ffffff;
  border-radius: 20rpx;
  -webkit-filter: drop-shadow(0 0 8rpx #44ADFB);
  filter: drop-shadow(0 0 8rpx #44ADFB);
}
/* 标签容器样式 */
.nav {
  display: flex;
  justify-content: space-around; /* 水平分布标签 */
  background-color: #96e3fa; /* 设置背景色 */
  padding: 20rpx 0; /* 设置内边距 */
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1); /* 添加阴影效果 */
  border-bottom: 1rpx solid #e6e6e6; /* 添加底部边框 */
}

/* 标签样式 */
.left, .right {
  flex: 1;
  text-align: center;
  font-size: 30rpx;
  padding: 10rpx 0; /* 调整标签内边距 */
  cursor: pointer; /* 鼠标指针效果 */
}

.left.select, .right.select {
  border-bottom: 2rpx solid #0575f5; /* 激活状态下的边框颜色 */
  color: #0575f5; /* 激活状态下的文本颜色 */
}

