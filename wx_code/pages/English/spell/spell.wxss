.spell-container {
  padding: 40rpx;
  background: #f5f7fa;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.progress-info {
  text-align: center;
  padding: 20rpx;
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.word-card {
  background: white;
  padding: 40rpx;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
  text-align: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.word-meaning {
  font-size: 36rpx;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.phonetic {
  font-size: 28rpx;
  color: #666;
}

.input-container {
  margin-bottom: 30rpx;
}

.spell-input {
  background: white;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  text-align: center;
  font-size: 32rpx;
}

.submit-btn {
  width: 48% !important;
  margin: 0 !important;
  height: 80rpx;
  line-height: 80rpx;
  background: #6ed6da;
  color: white;
  border-radius: 10rpx;
  font-size: 32rpx;
  text-align: center;
}

.result {
  text-align: center;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.correct {
  color: #52c41a;
}

.incorrect {
  color: #f5222d;
}

/* 键盘样式 */
.keyboard-wrapper {
  position: fixed;
  bottom: 30rpx;
  left: 0;
  right: 0;
  background: #f5f7fa;
  padding: 30rpx;
  box-shadow: 0 -2rpx 10px rgba(0, 0, 0, 0.1);
}

.keyboard {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.keyboard-row {
  display: flex;
  justify-content: center;
  gap: 15rpx;
}

.key {
  width: 70rpx;
  height: 90rpx;
  background: white;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #333;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1);
  transition: all 0.2s;
}

.key:active {
  opacity: 0.8;
  transform: scale(0.95);
}

.key-shift {
  width: 90rpx;
  background: #6ed6da;
  color: white;
}

.key-delete {
  width: 120rpx;
  background: #6ed6da;
  color: white;
}

.action-buttons {
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
  margin-top: 25rpx;
}

.mastered-btn,
.submit-btn {
  width: 48%;
  height: 90rpx;
  line-height: 90rpx;
  background: #6ed6da;
  color: white;
  border-radius: 12rpx;
  font-size: 34rpx;
  text-align: center;
}

.mastered-btn:active,
.submit-btn:active {
  opacity: 0.8;
}

.hint-container {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.hint-btn {
  background: #f0f0f0;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.hint-content {
  font-size: 32rpx;
  color: #999;
  padding: 10rpx;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}