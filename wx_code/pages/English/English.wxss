/* pages/Remenber.wxss */
page {
  background-color: #f5f7fa;
}

.title_view {
  position: fixed;
  z-index: 999;
  display: flex;
  align-items: flex-end;
  padding-left: 20rpx;
  width: 100%;
  background-color: #6ed6da;
}

.title_text {
  margin-bottom: 8rpx;
  color: #fff;
  font-weight: bold;
  font-size: 36rpx;
}

.remenber_contain {
  width: 100%;
  min-height: 100vh;
}

/* 背景图片 */
.bg-image {
  width: 100%;
  position: fixed;
  z-index: -999;
}

/* 用户显示信息 未用 */
.userheadimview {
  padding-top: 30px;
  padding-bottom: 30px;
  display: flex;
  align-items: center;
}

/* 用户头像 未用 */
.userinfo-avatar {
  overflow: hidden;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

/* 用户名字 未用 */
.userinfo-name {
  margin-left: 20px;
  color: rgb(255, 255, 255);
  font-size: 1.3rem;
  font-weight: 800;
}


/* 顶部view */
.top_view {
  padding-top: 90px;
  padding-bottom: 30px;
  display: flex;
  align-items: flex-end;
}

.top_title_text {
  font-size: 1.2rem;
  font-weight: 700;
  color: rgb(17, 17, 17);
}


/* 记单词容器 */
.rem-container {
  padding: 15px;
  /* x 偏移量 | y 偏移量 | 阴影模糊半径 | 阴影扩散半径 | 阴影颜色 */
  box-shadow: 1px 1px 10px 5px rgba(0, 0, 0, 0.2);
  border-radius: 10px;
  background-color: rgba(248, 248, 248, 0.9);

}

/* 标题 学习进度 */
.plan_title_view {
  padding-top: 5px;
  padding-bottom: 10px;
  border-bottom: solid #97bdde 0.1rem;
}

/* 计划设置 */
.setplan_view {
  font-weight: 300;
  background-color: #66a5dd;
  border-radius: 3px;
  padding: 0PX;
  color: white;
  font-size: 0.7em;
  padding: 3px;
}

/* 单词数据大框 */
.remenber_word_view {
  background-color: #97bdde;
  border-radius: 5px;
  padding: 10px;
  margin-top: 20px;
}


.today_data_view {
  margin-top: 20px;
  display: flex;
  justify-content: space-between;
  padding-left: 50px;
  padding-right: 50px;
}

.data_view {
  display: flex;
  flex-direction: column;
  color: rgb(0, 0, 0);
  font-weight: 800;
  align-items: center;
  justify-content: center;
}

/* 开始学习 */
.begin_study_view {
  padding-left: 50px;
  padding-right: 50px;
  padding-top: 20px;
  padding-bottom: 10px;
  display: flex;
  justify-content: center;

}

.begin_study_view_button {

  padding: 10px;
  display: flex;
  justify-content: center;
  width: 100%;
  background-color: white;
  font-weight: bold;
  border-radius: 10px;


}
.daily_text_view{
  color: rgb(0, 0, 0);
  padding: 23rpx;
  font-size: 1.1rem;
}

/* 调整页面容器的宽度，使其与左右边缘保持适当距离 */
.container {
  padding: 20rpx 40rpx;  /* 调整左右边距 */
  background: #f5f7fa;
  max-width: 100%;  /* 保证容器不超出屏幕 */
  margin: 0 auto;  /* 居中对齐 */
}

.header {
  margin-bottom: 40rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}


/* 修改学习计划区域宽度 */
.plan-section {
  background: white;
  padding: 30rpx;
  border-radius: 20rpx;
  margin: 0 20rpx 20rpx 20rpx;  /* 调整左右外边距 */
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.plan-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 修改设置计划按钮为灰色背景，字体颜色为灰色，去掉边缘 */
.set-plan-btn {
  font-size: 24rpx;
  padding: 10rpx 30rpx;
  background: white;  /* 设置背景色与屏幕背景一致 */
  color: #646161;  /* 字体颜色为灰色 */
  border: none;  /* 去掉边框 */
  border-radius: 5rpx;  /* 设置为方形，圆角为5rpx */
  margin: 0;
}

/* 按钮点击效果 */
.set-plan-btn:active {
  opacity: 0.8;
}

.book-info {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  margin-bottom: 20rpx;
}

.book-name {
  font-size: 36rpx;
  color: #333;
}

.progress-text {
  font-size: 24rpx;
  color: #6ed6da;
}

.progress-bar-container {
  margin-top: 20rpx;
}

/* 修改今日任务区域宽度 */
.task-card {
  background: white;
  padding: 30rpx;
  border-radius: 20rpx;
  margin: 0 40rpx 30rpx 40rpx;  /* 调整左右外边距 */
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  display: block;
}

/* 网格布局统计数据 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(320rpx, 1fr));
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.stats-item {
  background: #f8f9fa;
  padding: 20rpx;
  border-radius: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.stats-label {
  color: #666;
  font-size: 28rpx;
}

.stats-value {
  color: #333;
  font-size: 28rpx;
  font-weight: bold;
}

/* 修改按钮容器样式 */
.action-buttons {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
  margin-top: 30rpx;
}

/* 统一开始学习和拼写单词按钮样式 */
.start-btn,
.spell-btn {
  width: 48% !important;
  background: #6ed6da;
  color: white;
  font-weight: bold;
  border-radius: 40rpx;
  border: none;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  transition: all 0.3s;
  margin-top: 0 !important;
}

.start-btn:active,
.spell-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.plan-section,
.task-card {
  animation: fadeIn 0.5s ease-out;
}

/* 为响应式设计的调整 */
@media screen and (min-width: 768px) {
  .container {
    max-width: 80%;  /* 调整为屏幕宽度的80% */
  }
  .plan-section, .task-card {
    margin: 0 50rpx 30rpx 50rpx;  /* 增加外边距 */
  }
}