@import "/miniprogram_npm/@vant/weapp/common/index.wxss"; /* 引入 vant 样式 */

.center-box{
	display: flex;
  align-items: center;
  justify-content: center;
  background-color: #96e3fa;
  padding: 60px;
  -webkit-filter: drop-shadow(0 0 8rpx #96e3fa);
	filter: drop-shadow(0 0 8rpx #96e3fa);
	
}
.center{
	display: flex;
	width: 50px; /* 圆形容器的宽度 */
  height: 50px; /* 圆形容器的高度 */
	border-radius: 50%;
  background-color: rgb(121, 216, 233);
  align-items: center;
	justify-content: center;
	/*可以不要*/
  -webkit-filter: drop-shadow(0 0 8rpx #96e3fa);
  filter: drop-shadow(0 0 8rpx #96e3fa);
}

.detail-container {

  padding: 0px 20px 20px 20px;
}

.detail-icon {
  width: 30px;
	height: 30px;
	align-items: center;
	justify-content: center;
	display: flex; 
}

.detail-type, .detail-price, .detail-date, .detail-remark {
	font-size: 16px;
	word-wrap: break-word; /* 强制长单词换行 */
  word-break: break-all; /* 强制在字符之间断行 */
  white-space: normal; /* 允许文本换行 */
}
.button-container {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  margin-top: 40rpx;
}
.edit-button, .delete-button {
  flex: 1;
  margin: 0 10rpx;
  height: 80rpx;
  background-color: #007aff;
  color: #fff;
  font-size: 32rpx;
  border-radius: 10rpx;
}



.input-container {
  display: flex;
  align-items: center;
}
.cancellation{
	width: 86px;
	height: 40px;
	border: none;
	border-color: transparent;
	background: none !important;
  font-size: 14px;
  border-radius: 4px;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}
/* .cancellation::after{
		border: none;
		background: none !important;
} */
.confirm{
	width: 86px;
  height: 40px;
  color: #ffffff;
  font-size: 14px;
  border-radius: 4px;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}
.input-box {
  width: 97%;
  height: 40px;
  border: 1px solid #ffffff;
  border-radius: 4px;
  text-align: center;
	line-height: 40px;
  font-size: 16px;
}

.keyboard-body {
  height: 210px;
  display: grid;
  grid-template-columns: repeat(4, 1fr); /* 四列布局 */
  gap: 0; /* 按键之间的间距 */
}

.key {
  width: 100%;
  height: 50px;
  font-size: 18px;
  background-color: #ffffff;
  border: none; /* 去除边框 */
  text-align: center;
  line-height: 50px;
}

.delete-key {
  background-color: #ffffff;
  color: #fff;
  position: relative; /* 确保图标在按钮中心 */
  display: flex;
  justify-content: center;
  align-items: center;
}
.clear-key {
  background-color: #ffffff;
  color: #fff;
  position: relative; /* 确保图标在按钮中心 */
  display: flex;
  justify-content: center;
  align-items: center;
}

.delete-icon {
  width: 24px; /* 设置图标的宽度 */
  height: 24px; /* 设置图标的高度 */
}
.clear-icon {
  width: 24px; /* 设置图标的宽度 */
  height: 24px; /* 设置图标的高度 */
}

.date-key {
  color: #000000; /* 你想要的字体颜色 */
	font-size: 12px; /* 根据需要调整字体大小 */
	width: 100%;
  height: 50px;
  /* background-color: #ffffff; */
  border: none; /* 去除边框 */
  text-align: center;
  line-height: 50px;
}

.date-popup {
  display: flex;
  flex-direction: column;
  align-items: center;
}
